{% extends 'base.html.twig' %}
{% block title %}
{{ user.getUsername }}
{% endblock %}
{% block body %}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        Votre compte a été crée avec succes
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-6 mx-auto">

                <div class="text-center">
                    <img src="
                        {% if isImgBlank %}
                            {{  asset('contents/img/users/DefaultUserPic.png') }}
                        {% else %}
                            {{ asset('contents/img/users/' ~ user.getPhoto()) }}
                        {% endif %}" class="rounded img-thumbnail" width="200" height="200" alt="User">
                    <div>
                        <a href="{{ path("profile") }}" class="btn btn-primary">Accéder au profile</a>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}